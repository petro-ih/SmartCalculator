<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#000">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:textColor="#fff"
        android:textSize="48sp" />

    <GridLayout
        android:id="@+id/calcButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:columnCount="10"
        android:rowCount="5"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/buttonAC"
            style="@style/Firstbtns.Horizontal"
            android:layout_row="0"
            android:layout_column="6"
            android:text="AC" />

        <TextView
            android:id="@+id/buttonInverse"
            style="@style/Firstbtns.Horizontal"
            android:layout_row="0"
            android:layout_column="7"
            android:text="±" />

        <TextView
            android:id="@+id/buttonPercent"
            style="@style/Firstbtns.Horizontal"
            android:layout_row="0"
            android:layout_column="8"
            android:text="%" />

        <TextView
            android:id="@+id/buttonDivide"
            style="@style/RightColumn.Horizontal"
            android:layout_row="0"
            android:layout_column="9"
            android:text="/" />

        <TextView
            android:id="@+id/button7"
            style="@style/Digit.Horizontal"
            android:layout_row="1"
            android:layout_column="6"
            android:text="7" />

        <TextView
            android:id="@+id/button8"
            style="@style/Digit.Horizontal"
            android:layout_row="1"
            android:layout_column="7"
            android:text="8" />

        <TextView
            android:id="@+id/button9"
            style="@style/Digit.Horizontal"
            android:layout_row="1"
            android:layout_column="8"
            android:text="9" />

        <TextView
            android:id="@+id/buttonMultiply"
            style="@style/RightColumn.Horizontal"
            android:layout_row="1"
            android:layout_column="9"
            android:text="x" />

        <TextView
            android:id="@+id/button4"
            style="@style/Digit.Horizontal"
            android:layout_row="2"
            android:layout_column="6"
            android:text="4" />

        <TextView
            android:id="@+id/button5"
            style="@style/Digit.Horizontal"
            android:layout_row="2"
            android:layout_column="7"
            android:text="5" />

        <TextView
            android:id="@+id/button6"
            style="@style/Digit.Horizontal"
            android:layout_row="2"
            android:layout_column="8"
            android:text="6" />

        <TextView
            android:id="@+id/buttonMinus"
            style="@style/RightColumn.Horizontal"
            android:layout_row="2"
            android:layout_column="9"
            android:text="-" />

        <TextView
            android:id="@+id/button1"
            style="@style/Digit.Horizontal"
            android:layout_row="3"
            android:layout_column="6"
            android:text="1" />

        <TextView
            android:id="@+id/button2"
            style="@style/Digit.Horizontal"
            android:layout_row="3"
            android:layout_column="7"
            android:text="2" />

        <TextView
            android:id="@+id/button3"
            style="@style/Digit.Horizontal"
            android:layout_row="3"
            android:layout_column="8"
            android:text="3" />

        <TextView
            android:id="@+id/buttonPlus"
            style="@style/RightColumn.Horizontal"
            android:layout_row="3"
            android:layout_column="9"
            android:text="+" />

        <TextView
            android:id="@+id/button0"
            style="@style/Digit.Horizontal"
            android:layout_width="0dp"
            android:layout_row="4"
            android:layout_column="6"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="@string/button0"
            android:background="@drawable/bg_zero"
            android:gravity="start|center_vertical"
            android:paddingStart="30dp"/>

        <TextView
            android:id="@+id/buttonPeriod"
            style="@style/Digit.Horizontal"
            android:layout_row="4"
            android:layout_column="8"
            android:text="," />

        <TextView
            android:id="@+id/buttonEvaluate"
            style="@style/RightColumn.Horizontal"
            android:layout_row="4"
            android:layout_column="9"
            android:text="=" />
        <TextView
            android:id="@+id/buttonMr"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="5"
            android:text="mr" />
        <TextView
            android:id="@+id/button10x"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="5"
            android:text="10^x" />
        <TextView
            android:id="@+id/buttonLg"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="5"
            android:text="lg" />
        <TextView
            android:id="@+id/buttonEE"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="5"
            android:text="EE" />
        <TextView
            android:id="@+id/buttonRand"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="5"
            android:text="Rand" />
        <TextView
            android:id="@+id/buttonMminus"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="4"
            android:text="m-" />
        <TextView
            android:id="@+id/buttonEinx"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="4"
            android:text="e^x" />
        <TextView
            android:id="@+id/buttonLn"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="4"
            android:text="ln" />
        <TextView
            android:id="@+id/buttonExponenta"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="4"
            android:text="e" />
        <TextView
            android:id="@+id/buttonPi"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="4"
            android:text="𝝿" />
        <TextView
            android:id="@+id/buttonMplus"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="3"
            android:text="m+" />
        <TextView
            android:id="@+id/buttonXinY"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="3"
            android:text="x^y" />
        <TextView
            android:id="@+id/buttonYsqrtX"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="3"
            android:text="x^{1/y}" />
        <TextView
            android:id="@+id/buttonTan"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="3"
            android:text="tan" />
        <TextView
            android:id="@+id/buttonTanh"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="3"
            android:text="tanh" />
        <TextView
            android:id="@+id/buttonMC"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="2"
            android:text="mc" />
        <TextView
            android:id="@+id/buttonXin3"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="2"
            android:text="x^3" />
        <TextView
            android:id="@+id/button13sqrtX"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="2"
            android:text="x^{1/3}" />
        <TextView
            android:id="@+id/buttonCos"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="2"
            android:text="cos" />
        <TextView
            android:id="@+id/buttonCosh"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="2"
            android:text="cosh" />
        <TextView
            android:id="@+id/buttonRBracket"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="1"
            android:text=")" />
        <TextView
            android:id="@+id/buttonXin2"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="1"
            android:text="x^2" />
        <TextView
            android:id="@+id/button2sqrtX"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="1"
            android:text="x^{1/2}" />
        <TextView
            android:id="@+id/buttonSin"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="1"
            android:text="sin" />
        <TextView
            android:id="@+id/buttonSinh"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="1"
            android:text="sinh" />
        <TextView
            android:id="@+id/buttonLBracket"
            style="@style/Buttons"
            android:layout_row="0"
            android:layout_column="0"
            android:text="(" />
        <TextView
            android:id="@+id/buttonSecond"
            style="@style/Buttons"
            android:layout_row="1"
            android:layout_column="0"
            android:text="2^nd" />
        <TextView
            android:id="@+id/button1onX"
            style="@style/Buttons"
            android:layout_row="2"
            android:layout_column="0"
            android:text="1/x" />
        <TextView
            android:id="@+id/buttonFactorial"
            style="@style/Buttons"
            android:layout_row="3"
            android:layout_column="0"
            android:text="x!" />
        <TextView
            android:id="@+id/buttonRad"
            style="@style/Buttons"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Rad" />
    </GridLayout>
</LinearLayout>